\makeatletter

\pgfdeclareshape{hexagon}{
	\inheritsavedanchors[from=circle]
	\inheritanchor[from=circle]{center}
	\inheritbackgroundpath[from=circle]
	\saveddimen{\cornerround}{\pgf@x=5mm}
	\saveddimen{\height}{\pgf@x=50mm}
	\foregroundpath{
		\dimendef\pgf@hh=0% half height
		\dimendef\flen=0%
		\dimendef\flenh=0%
		\pgfmathsetlength{\pgf@hh}{(\height / 2)}%
		\pgfmathsetlengthmacro{\flen}{\height / sqrt(3)}%
		\pgfmathsetlengthmacro{\flenh}{\height / sqrt(3) / 2}%

		\pgfsetcornersarced{\pgfpoint{5mm}{5mm}}
		\pgfpathmoveto{\pgfpoint{0mm}{-\pgf@hh}}
		\pgfpathlineto{\pgfpoint{\flenh}{-\pgf@hh}}
		\pgfpathlineto{\pgfpoint{\flen}{0mm}}
		\pgfpathlineto{\pgfpoint{\flenh}{\pgf@hh}}
		\pgfpathlineto{\pgfpoint{-\flenh}{\pgf@hh}}
		\pgfpathlineto{\pgfpoint{-\flen}{0mm}}
		\pgfpathlineto{\pgfpoint{-\flenh}{-\pgf@hh}}
		\pgfpathclose
		\pgfusepath{stroke}
	}
}

\makeatother

